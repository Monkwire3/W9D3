<% following = current_user.out_follows.include?(@user.id)%>

<form action="<%= user_follow_url(user) %>" method="POST">
  <%= render "shared/auth_token" %>

  <button class="follow-toggle" data-user-id="<%=current_user.id%>" data-follow-state="<%= following ? "followed" : "unfollowed" %>">
  
</button>
</form>